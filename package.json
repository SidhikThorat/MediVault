{
  "name": "medivault",
  "version": "1.0.0",
  "description": "A comprehensive medical records management system",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "start": "cd server && npm start",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install"
  },
  "keywords": [
    "medical",
    "records",
    "healthcare",
    "patient-management",
    "hospital",
    "clinic"
  ],
  "author": "Sidhik Thorat",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/SidhikThorat/MediVault.git"
  },
  "bugs": {
    "url": "https://github.com/SidhikThorat/MediVault/issues"
  },
  "homepage": "https://github.com/SidhikThorat/MediVault#readme",
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "prettier": "^3.1.1",
    "jest": "^29.7.0"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
